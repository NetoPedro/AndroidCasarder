<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="mainapplication.activity.TimeSlotsActivity">
    <TextView
        android:id="@+id/day_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_min="360dp"
        app:layout_constraintWidth_max="500dp"
        android:text="@string/select_day"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"/>
        <ScrollView
            android:id="@+id/calendar_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/day_label"
            app:layout_constraintBottom_toTopOf="@+id/time_slots_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_min="360dp"
            app:layout_constraintWidth_max="500dp"
            app:layout_constraintHeight_min="300dp"
            app:layout_constraintHeight_max="400dp"
            android:layout_marginTop="-10dp">
            <CalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></CalendarView>
        </ScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/time_slots_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/calendar_layout"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_min="360dp"
        app:layout_constraintWidth_max="506dp"/>
    <TextView
        android:id="@+id/no_results"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/calendar_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_min="360dp"
        app:layout_constraintWidth_max="500dp"
        android:text="@string/no_time_slots"
        android:gravity="center"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/calendar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_min="360dp"
        app:layout_constraintWidth_max="500dp"
        android:visibility="gone"
        />
</android.support.constraint.ConstraintLayout>
